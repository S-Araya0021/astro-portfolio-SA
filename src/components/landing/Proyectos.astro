---
import Projects from '../../config/projects.json';
import { Swiper, SwiperSlide } from 'swiper/react';
import 'swiper/css';
import 'swiper/css/navigation';
---

<section id="proyectos" class="bg-gray-900 h-screen pt-[72px] snap-start">
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-4xl md:text-5xl font-bold text-white text-center mb-12">
      Proyectos
    </h2>
    
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {Projects.projects.map((project) => (
          <div class="swiper-slide">
            <article class="bg-gray-800 rounded-xl p-4 h-full flex flex-col">
              <h3 class="text-xl font-bold mb-2">{project.title}</h3>
              <p class="text-gray-300 flex-grow">{project.description}</p>
              <div class="mt-4">
                <a href="#" class="inline-block bg-purple-600 px-4 py-2 rounded-lg">
                  Ver más
                </a>
              </div>
            </article>
          </div>
        ))}
      </div>
      
    </div>
  </div>
</section>

<style>
  section {
    width: 100%;
    overflow-x: hidden;
  }

  .swiper-container {
    width: 100%;
    padding: 1rem 0;
  }

  .swiper-slide {
    height: auto;
    max-width: 100%;
  }

  @media (max-width: 640px) {
    .swiper-slide {
      width: 90%; /* Ajusta el ancho en móvil */
      margin: 0 auto;
    }
    
    article {
      margin: 0.5rem;
    }
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  const swiper = new Swiper('.swiper-container', {
    modules: [Navigation, Pagination],
    slidesPerView: 'auto',
    spaceBetween: 16,
    centeredSlides: true,
    loop: true,
    breakpoints: {
      320: {
        slidesPerView: 1,
        spaceBetween: 10,
      },
      640: {
        slidesPerView: 2,
        spaceBetween: 20,
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 30,
      }
    }
  });
</script>

<style>
  .swiper-button-next,
  .swiper-button-prev {
    color: #fff;
  }
  
  .swiper-button-next:after,
  .swiper-button-prev:after {
    font-size: 24px;
  }
</style> 